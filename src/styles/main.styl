html
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    height 100%
    margin 0
    font-family 'Architects Daughter', cursive



#introPage, #singlePage, #multiPage, #videoPage
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    margin auto

#introPage
    display block
    height 650px
    width 850px



#buttonContainer
    width 700px
    height 75px
    margin 50px auto

#sp, #mp, #sp1, #mp1
    font-size 35px
    width 250px
    height 75px
    float right
    line-height 75px
    text-align center
    color white
    background-color #00006c
    border-radius 25px
    cursor pointer

#sp
    float left

#sp1
    margin 69px 20px 0 0

#mp1
    margin 50px 20px 0 0